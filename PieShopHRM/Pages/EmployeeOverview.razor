        @foreach (var employee in Employees)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2">

                <EmployeeCard Employee="employee" EmployeeQuickViewPopup="ShowQuickViewPopup"></EmployeeCard>

                @*<EmployeeCard Employee="employee" EmployeeQuickViewPopup="ShowQuickViewPopup"/>*@

            </div>

        }
    </div>

